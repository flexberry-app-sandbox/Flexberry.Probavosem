<h3 class="ui header">{{t "forms.i-i-s-probavosem-карта-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодКарты
      class=(if (v-get validationModel "кодКарты" "isInvalid") "error")
      label=(t "forms.i-i-s-probavosem-карта-e.кодКарты-caption")
      data-test-i-i-s-probavosem-карта-e-кодКарты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодКарты" "message")}}
  </div>
  <div class="field" data-test-i-i-s-probavosem-карта-e-типКарты="true">
    <label>{{t "forms.i-i-s-probavosem-карта-e.типКарты-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-probavosem-вид-карты")
      value=model.типКарты
      class=(if (v-get validationModel "типКарты" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "типКарты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probavosem-карта-e.комната-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.комната
      displayAttributeName="номер"
      autocomplete=true
      relationName="комната"
      projection="КомнатаL"
      title=(t "forms.i-i-s-probavosem-карта-e.комната-caption")
      readonly=readonly
      componentName="комнатаLookup"
      class=(if (v-get validationModel "комната" "isInvalid") "error")
      data-test-i-i-s-probavosem-карта-e-комната=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "комната" "message")}}
  </div>
</form>
